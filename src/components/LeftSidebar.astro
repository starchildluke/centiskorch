---
import { getCollection } from 'astro:content';
const posts = await getCollection('misc', ({slug}) => {
	return slug.includes('links');
}); 

const rooms = await getCollection('rooms'); 

import Resources from './Resources.mdx';

---

<aside class="left-sidebar box">
	<h2 class="headings">Links</h2>
	<nav>
		<ul class="pokeball-icons">
			<li><a href="/">home</a></li>
			<li><a href="/about/">about</a></li>
			<li><a href="/contact-me/">contact me</a></li>
			<li><a href="/blog/">blog</a></li>
			<li><a href="/logs/">logs</a></li>
			<li><a href="/favourites/">my favourites</a></li>
			<li><a href="/my-types/">my types</a></li>
			<li><a href="/nicknames/">nicknames</a></li>
			<li>music</li>
		</ul>
	</nav>
	<h2 class="headings"><a href="/misc/">Misc</a></h2>
	<nav>
		<ul class="pokeball-icons">
			{posts.map((post) => (
					<li>
						<a href={`/misc/${post.slug}/`}>{post.data.title.toLowerCase()}</a>
					</li>
					))
				}
		</ul>
	</nav>
	<h2 class="headings"><a href="/rooms/">Rooms</a></h2>
	<nav>
		<ul class="pokeball-icons">
			{rooms.map((room) => (
					<li>
						<a href={`/rooms/${room.slug}/`}>{room.data.title.toLowerCase()}</a>
					</li>
					))
				}
			<li><a href="https://www.youtube.com/watch?v=QcD_YXCxxZM">the third room</a></li>
		</ul>
	</nav>
	<h2 class="headings">Resources</h2>
		<nav>
			<Resources/>
		</nav>
</aside>