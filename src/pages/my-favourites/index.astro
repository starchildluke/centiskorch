---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import AsideLeft from '../../components/AsideLeft.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
const title = "My favourites";
const description = "These are a few of my favourite things.";

const posts = await getCollection('my-favourites');
---

<Layout  title={title} description={description}/>
<div class="container">
	<div class="flex-content">
		<main class="box">
			<h1 class="headings">{title}</h1>
			<ul class="pokeball-icons">
				{posts.map((post) => (
					<li>
						<a href={`/my-favourites/${post.slug}/`} class="blog-listing-title">{post.data.title}</a>
					</li>
					))
				}
			</ul>
		</main>
		<AsideLeft />
		<Footer />
	</div>
</div>
			