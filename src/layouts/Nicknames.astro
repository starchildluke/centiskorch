type Props = CollectionEntry<'favourites'>['data'];

const { title, description, lcpSrc, lcpMediaAs, lcpMediaType } = Astro.props;
---

<LayoutWithLCP title={title} description={description} lcpSrc={lcpSrc} lcpMediaAs={lcpMediaAs} lcpMediaType={lcpMediaType} />
<div class="container">
	<div class="flex-content">
		<main class="box">
			<article>
				<section class="prose">
					<section class="title">
								<h1 class="headings">{title}</h1>
							</section>
							<slot />
						</section>
					</article>
				</main>
				<LeftSidebar />
						<Footer />
						</body>
					</html>
