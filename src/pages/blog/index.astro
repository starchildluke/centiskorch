---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import LeftSidebar from '../../components/LeftSidebar.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
const title = "Blog";
const description = "This is where I keep my blogs.";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

---

<Layout title={title} description={description}/>
<div class="container">
	<div class="flex-content">
		<main class="box">
			<h1 class="headings">{title}</h1>
			<p>This is my humble blog. I write about all things Pok√©mon related that doesn't already have a dedicated page. You can follow the blog via my <a href="/rss.xml">RSS feed</a>.</p>
			<ul class="pokeball-icons">
				{posts.map((post) => (
					<li>
						<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
						<p class="date">
							<FormattedDate date={post.data.pubDate} />
						</p>
					</li>
					))
				}
			</ul>
		</main>
		<LeftSidebar />
		<Footer />
	</div>
</div>
			